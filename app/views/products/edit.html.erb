<h1>商品内容変更</h1>

<%= form_for(@product) do |f| %>

    <%= f.label :ジャケット %>
    <%= f.attachment_field :jacket %><br />

    <%= f.label :タイトル %>
    <%= f.text_field :name %><br />

    <%= f.label :値段 %>
    <%= f.text_field :price %><br />

    <%= f.label :アーティスト %>
    <%= f.text_field :artist %><br />

    <%= f.label :レーベル  %>
    <%= f.text_field :label  %><br />

    <%= f.label :ジャンル %>
    <%= f.text_field :genre %><br />

    <%= f.label :曲名 %>
    <%= f.text_field :music %><br />

    <%= f.label :在庫数 %>
    <%= f.text_field :stock %><br />

    <%= f.submit "Update User" %>

<% end %>