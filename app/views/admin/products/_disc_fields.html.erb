<div class="nested-fields well well-compact">
  <div class="form-group">
    <%= f.label :disc_number %>
    <%= f.number_field :disc_number %><br>
  </div>

  <div class="items">
    <%= f.fields_for :songs do |song| %>
      <%= render 'song_fields', f: song %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "曲を追加する", f, :songs %>
    </div>
  </div>
  <%= link_to_remove_association "ディスクを削除する", f %>
</div>