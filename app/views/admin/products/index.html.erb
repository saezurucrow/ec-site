<h1>商品一覧</h1>

<div class="button-boxes">
  <div><%= link_to '新規商品登録', new_admin_product_path,class:"btn btn-default" %></div>
  <div><%= link_to '新規アーティスト登録', new_admin_artist_path,class:"btn btn-default"  %></div>
  <div><%= link_to '新規レーベル登録', new_admin_label_path,class:"btn btn-default"  %></div>
  <div><%= link_to '新規ジャンル登録', new_admin_genre_path,class:"btn btn-default"  %></div>
</div>

<table class="table">
  <tr>
    <th></th>
    <th>ジャケット</th>
    <th>アルバム名</th>
    <th>価格</th>
    <th>在庫数</th>
    <th>販売ステータス</th>
    <th></th>
  </tr>
  <% @products.reverse_order.each do |product| %>
    <tr>
      <td>
        <% if product.destory_flag== true %>
          <span style="color: red;">削除</span>
        <% end %>
      </td>
      <td><%= attachment_image_tag product, :jacket, :fill, 50, 50, format: 'jpeg', class: "product-img", fallback: "no_image.jpg" %></td>
      <td><%= product.name %></td>
      <td><%= (product.price * @TAX).floor %></td>
      <td><%= product.stock %></td>
      <td><%= product.product_status %></td>
      <td><%= link_to "詳細" , admin_product_path(product) %></td>
    </tr>
  <% end %>
</table>

<%= paginate @products %>