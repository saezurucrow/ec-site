<!DOCTYPE html>
<html>
  <head>
    <title>ec-site</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>

   <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span class="title" style="color:#ffffff;">CDショップ</span>
    </nav>

    <div id="slidemenu">
      <div class="nav navbar-nav navbar-left">
        
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if customer_signed_in? %>
          <li class="">
            <%= link_to ' Home', '#' ,class: "glyphicon glyphicon-home" %>
          </li>
          <li class="">
            <%= link_to ' Users', "#" ,class: "glyphicon glyphicon-user"  %>
          </li>
          <li class="">
            <%= link_to ' Books', "#" ,class: "glyphicon glyphicon-book"  %>
          </li>
          <li class="">
            <%= link_to " logout", destroy_user_session_path, method: :delete,class: "glyphicon glyphicon-log-out"  %>
          </li>
        <% else %>
          <li class="">
            <%= link_to "商品一覧", "root_path" ,class: "glyphicon glyphicon-headphones" %>
          </li>
          <li class="">
            <%= link_to "新規登録", new_customer_registration_path,class: "glyphicon glyphicon-edit"  %>
          </li>
          <li class="">
            <%= link_to "ログイン", new_customer_session_path,class: "glyphicon glyphicon-log-in"  %>
          </li>
        <% end %>
      </ul>
      </header>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
